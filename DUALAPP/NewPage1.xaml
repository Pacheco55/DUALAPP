<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DUALAPP.NewPage1"
             Title="Agregar Usuario">
    <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*,Auto,*" BackgroundColor="GhostWhite">
        <!-- Contenido principal -->
        <Grid Grid.Row="1" Grid.ColumnSpan="3" Padding="20" RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*">
            <!-- Nombre de usuario -->
            <Label Text="Nombre de Usuario : " TextColor="Black" Grid.Row="0" Grid.Column="0" VerticalOptions="Center" />
            <Entry x:Name="newUsernameEntry" TextColor="Black" Grid.Row="0" Grid.Column="1" Placeholder="Ingrese el nombre de usuario" />

            <!-- Contraseña -->
            <Label Text="Contraseña : " TextColor="Black" Grid.Row="1" Grid.Column="0" VerticalOptions="Center" />
            <Entry x:Name="newPasswordEntry" TextColor="Black" Grid.Row="1" Grid.Column="1" Placeholder="Ingrese la contraseña" IsPassword="True" />

            <!-- Confirmar Contraseña -->
            <Label Text="Confirmar Contraseña : " TextColor="Black" Grid.Row="2" Grid.Column="0" VerticalOptions="Center" />
            <Entry x:Name="confirmPasswordEntry" TextColor="Black" Grid.Row="2" Grid.Column="1" Placeholder="Confirme la contraseña" IsPassword="True" />

            <!-- Botón de guardar usuario -->
            <Button Text="Guardar Usuario" Clicked="GuardarUsuario" TextColor="Black" BackgroundColor="DarkSeaGreen" Grid.Row="3" Grid.ColumnSpan="2" HorizontalOptions="Center" VerticalOptions="Center" />
        </Grid>
    </Grid>
</ContentPage>
