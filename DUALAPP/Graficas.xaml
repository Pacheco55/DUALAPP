<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:microcharts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="DUALAPP.Graficas"
             Title="Graficas">
    <ScrollView BackgroundColor="LightSteelBlue">
        <StackLayout >
            <Button Text="Cambiar Colores" Clicked="OnChangeColorsClicked" TextColor="Black" BackgroundColor="DarkSeaGreen" HorizontalOptions="Center" VerticalOptions="Center" />
            <Button Text="REGRESAR" Clicked="backpostlogin" TextColor="Black" BackgroundColor="DarkSeaGreen" HorizontalOptions="Center" VerticalOptions="Center" />
            <microcharts:ChartView x:Name="BarChart" HeightRequest="500" />
            <microcharts:ChartView x:Name="LineChart" HeightRequest="500" />
            <microcharts:ChartView x:Name="PieChart" HeightRequest="500" />
            <microcharts:ChartView x:Name="DonutChart" HeightRequest="500" />
        </StackLayout>
    </ScrollView>
</ContentPage>